/*主容器*/ 
.stepper {
  width: 112px;
  height: 26px; 
  /*给主容器设一个边框*/ 
  border: 1px solid #ccc; 
  border-radius: 3px; 
  display:flex;
  font-size: 16px;
  line-height: 26px;
  margin-top:9px;
  margin-bottom: 9px;
} 
/*加号和减号*/ 
.stepper text { 
  width: 26px; 
  text-align: center;
  line-height: 24px;
} 
/*数值*/ 
.stepper input { 
  width: 60px; 
  height: 26px; 
  text-align: center; 
  /*给中间的input设置左右边框即可*/ 
  border-left: 1px solid #ccc; 
  border-right: 1px solid #ccc; 
} 
/*普通样式*/ 
.stepper .normal{ 
  color: black; 
} 
/*禁用样式*/ 
.stepper .disabled{ 
  color: #ccc; 
} 