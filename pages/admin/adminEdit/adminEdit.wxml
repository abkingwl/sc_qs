  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示:{{errors}}填写有误，请检查！</view>
  <view class="weui-cells__title">编辑活动</view>
    <view class="weui-cells weui-cells_after-title">
        <!-- activity type -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动类型</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindTypeChange" value="{{typeIndex}}" range="{{types}}">
                  <view class="weui-input">{{types[typeIndex]}}</view>
                </picker>
            </view>
        </view>
        <!-- activity Date -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动日期</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="date" value="{{date}}" start="{{date}}" end="2020-09-01" bindchange="bindDateChange">
                    <view class="weui-input">{{date}}</view>
                </picker>
            </view>
        </view>
        <!-- activity Time -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">开始时间</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="time" value="{{startTime}}" start="19:00" end="24:00" bindchange="bindStartTimeChange">
                    <view class="weui-input">{{startTime}}</view>
                </picker>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">结束时间</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="time" value="{{endTime}}" start="22:00" end="24:00" bindchange="bindEndTimeChange">
                    <view class="weui-input">{{endTime}}</view>
                </picker>
            </view>
        </view>
        <!-- activity place -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动地点</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindPlaceChange" value="{{placeIndex}}" range="{{places}}">
                  <view class="weui-input">{{places[placeIndex]}}</view>
                </picker>
            </view>
        </view>
        <!-- activity head count -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">人数限制</view>
            </view>
            <view class="weui-cell__bd">
                <!--<input class="weui-input" placeholder="人数限制" type="number" bindinput="bindCountChange"/>-->
                <component-numberzj init-input="{{count}}" bind:reportToParent="listenAtComponent"></component-numberzj>
            </view>
        </view>
        <!-- activity cost -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">费用</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="费用" type="number" bindinput="bindCostChange" value="{{cost}}"/>
            </view>
        </view>
