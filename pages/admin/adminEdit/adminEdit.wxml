    </view>
    <!-- activity memo -->
        <view class="weui-cells__title">备注</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入文本" maxlength="100" style="height: 2.3em" bindinput="calcMemo" bindblur="bindMemoChange" value="{{memo}}" />
                    <view class="weui-textarea-counter">{{memoLength}}/100</view>
                </view>
            </view>
        </view>
    <view class="weui-cells__tips">请正确填写各项信息</view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="confirmToAdd">发布活动</button>
        <button class="weui-btn" type="warn" bindtap="confirmToDelete">删除活动</button>
    </view>
  </view>
</view>