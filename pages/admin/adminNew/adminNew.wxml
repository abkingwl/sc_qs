  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
  <view class="weui-cells__title">新建活动</view>
    <view class="weui-cells weui-cells_after-title">
        <!-- activity type -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动类型</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindTypeChange" value="{{typeIndex}}" range="{{type}}">
                  <view class="weui-input">{{type[typeIndex]}}</view>
                </picker>
            </view>
        </view>
        <!-- activity Date -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动日期</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="date" value="{{date}}" start="{{dateStart}}" end="2020-09-01" bindchange="bindDateChange">
                    <view class="weui-input">{{dateStart}}</view>
                </picker>
            </view>
        </view>
        <!-- activity Time -->
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">活动时间</view>
            </view>
            <view class="weui-cell__bd">
                <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                    <view class="weui-input">{{time}}</view>
                </picker>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">qq</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入qq"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入手机号" />
            </view>
            <view class="weui-cell__ft">
                <view class="weui-vcode-btn">获取验证码</view>
            </view>
        </view>
        
        
